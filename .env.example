# postgresql+psycopg2://USER:PASSWORD@HOST:PORT/DBNAME?sslmode=require
# Ejemplo (remplaza credenciales y host):
# DATABASE_URL=postgresql+psycopg2://user:pass@ep-xxxx-pooler.region.aws.neon.tech/dbname?sslmode=require
DATABASE_URL=

# Minado de datos para entrenamiento (no se incluye dataset)
# Opción 1: consulta SQL sobre tu DATABASE_URL que devuelva columnas de features y 'y'
TRAINING_SQL=
# Opción 2: URL externa que entregue CSV o JSON con las columnas requeridas
TRAINING_SOURCE_URL=

